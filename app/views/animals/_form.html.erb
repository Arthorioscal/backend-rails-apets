<%= form_with(model: @animal) do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :photo %>
    <%= form.file_field :photo %>
  </div>

  <div>
    <%= form.label :gender %>
    <%= form.select :gender, ['Female', 'Male'] %>
  </div>

  <div>
    <%= form.label :breed %>
    <%= form.text_field :breed %>
  </div>

  <div>
    <%= form.label :age %>
    <%= form.number_field :age %>
  </div>

  <div>
    <%= form.label :additional_info %>
    <%= form.text_area :additional_info %>
  </div>

  <%= form.submit "Salvar Alterações" %>
<% end %>